{% extends 'AgpBundle:Default:_layout.html.twig' %}
{% form_theme form 'CoreBundle:Form:form.html.twig' %}

{% block contenido %}
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">       
                <div class="x_title">
                    <h2>Nueva entrega</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <div id="wizard" class="form_wizard wizard_horizontal">
                        <form accept-charset="UTF-8" class="form-horizontal form-label-left" enctype="multipart/form-data" method="post" action="{{ path('entrega_stepcontrol', { 'id': entrega.id  }) }}">

                            <ul class="wizard_steps col-md-12 col-sm-12 col-xs-12" >
                                <li>
                                    <a href="#step-1" >
                                        <span class="step_no">1</span>
                                        <span class="step_descr">
                                            Carga de datos                                       
                                        </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#step-2">
                                        <span class="step_no">2</span>
                                        <span class="step_descr">
                                            Asignación de productos
                                        </span>
                                    </a>
                                </li>
                                <li>
                                    <a href="#step-3"  class="selected">
                                        <span class="step_no">3</span>
                                        <span class="step_descr">
                                            Confirmación
                                        </span>
                                    </a>
                                </li>

                            </ul>
                            <div class="ln_solid col-md-12 col-sm-12 col-xs-12"></div> 

                            <div id="step-2"> 
                                <div class="col-md-12 col-xs-12">
                                    <div class="x_panel">
                                        <div class="x_title">
                                            <h2>Control de entrega</h2>
                                            <ul class="nav navbar-right panel_toolbox">
                                                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                                                </li>                                    
                                                <li><a class="close-link"><i class="fa fa-close"></i></a>
                                                </li>
                                                <li class="dropdown">
                                                    <a aria-expanded="false" role="button" data-toggle="dropdown" class="dropdown-toggle" href="#"><i class="fa fa-wrench"></i></a>
                                                    <ul role="menu" class="dropdown-menu">
                                                        <li><a href="#">Settings 1</a>
                                                        </li>
                                                        <li><a href="#">Settings 2</a>
                                                        </li>
                                                    </ul>
                                                </li>
                                            </ul>
                                            <div class="clearfix"></div>
                                        </div>
                                        <div class="x_content">
                                            <div class="col-md-12 well">
                                                
                                                <div class="col-md-4">{{ form_row(form.barrilesEntregados) }}</div>  
                                                <div class="col-md-4">{{ form_row(form.barrilesRetirados) }}</div> 
                                                <div class="col-md-4">{{ form_row(form.barrilesCliente) }}</div> 
                                            </div>
                                            <div class="col-md-12 well">
                                                <div class="col-md-2">{{ form_row(form.co2Entregados) }}</div>  
                                                <div class="col-md-2">{{ form_row(form.co2Retirados) }}</div> 
                                                <div class="col-md-2">{{ form_row(form.co2Cambio) }}</div>
                                                <div class="col-md-2">{{ form_row(form.co2Backup) }}</div>
                                                <div class="col-md-4">{{ form_row(form.limpiezaRealizada) }}</div>
                                            </div>
                                            <div class="col-md-12 well">
                                                <div class="col-md-4">{{ form_row(form.descuentoEspecial)}}</div>  
                                                <div class="col-md-4">{{ form_row(form.pagoRealizado) }}</div> 
                                                <div class="col-md-4"> {{ form_row(form.deuda) }}</div>

                                            </div>
                                            <div class="col-md-12">
                                                <div class="col-md-12">{{ form_row(form.observacion) }}</div>
                                            </div>





                                        </div>
                                    </div>
                                </div>



                            </div>

                            <div class="ln_solid col-md-12 col-sm-12 col-xs-12"></div>   

                            <div class="form-group">
                                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-10">
                                    <a href="{{ path('entregalist') }}" class="guardar btn btn-primary">Volver</a>
                                    <input type="submit" id="bt-save" class="guardar btn btn-success" value="Finalizar" />
                                </div>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}

    {{ parent() }}
    <script type="text/javascript" src="{{asset('assets/js/wizard/jquery.smartWizard.js')}}"></script>

{% endblock %}