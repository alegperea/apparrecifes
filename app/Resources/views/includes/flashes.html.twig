{% set tipo_mensajes = app.session.flashBag.all %}
{% if tipo_mensajes|length > 0 %}
    {% for key,  messages in tipo_mensajes %}
        {% for  message in messages %}
            <div class="alert alert-{{ key }}{% if key == "error" %} alert-danger{% endif %}">
                <a class="close" data-dismiss="alert" href="#">x</a>
                {{ message |raw}}
            </div>
        {% endfor %}
    {% endfor %}
{% endif %}